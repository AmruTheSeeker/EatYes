// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String          @id @default(cuid())
  name            String
  email           String          @unique
  password        String
  gender          String
  age             Int
  tall            Int
  recent_weight   Int
  profile_picture String
  Goals           Goals[]
  CaloryHistory   CaloryHistory[]
}

model Goals {
  id           String @id @default(cuid())
  goal_options String
  goal_weight  String
  weekly_goal  String
  user_id      String
  user         User   @relation(fields: [user_id], references: [id])
}

model Food {
  id            String          @id @default(cuid())
  name          String
  calory        Int
  CaloryHistory CaloryHistory[]
}

model CaloryHistory {
  id          String @id @default(cuid())
  food_name   String
  food_calory Int
  user_id     String
  user        User   @relation(fields: [user_id], references: [id])
  food_id     String
  food        Food   @relation(fields: [food_id], references: [id])
}

model UserGuest {
  id              String @id @default(cuid())
  name            String
  email           String
  password        String
  gender          String
  age             Int
  tall            Int
  recent_weight   Int
  profile_picture String
  calory          Int
  food_name       String
  food_calory     Int
}
